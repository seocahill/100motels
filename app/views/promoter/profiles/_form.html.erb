<%= simple_form_for [:promoter, @profile], :html => { class: 'form-horizontal' } do |f| %>
  <%#= f.error_messages %>

  <fieldset>
    <legend></legend>

    <%= f.input :visible  %>
    <%= f.input :image, label: "Image or Logo" do %>
      <%= f.filepicker_field :image, button_class: "btn btn-primary btn-large"  %>
    <% end %>
    <%= f.input :promoter_media %>

    <div class="form-actions">
        <%= f.submit nil, class: "btn btn-primary" %>
        <%= link_to 'Cancel', promoter_root_path, class: 'btn' %>
    </div>
  </fieldset>

<% end %>