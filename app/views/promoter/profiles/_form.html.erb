<%= simple_form_for [:promoter, @profile], :html => { class: 'form-horizontal' } do |f| %>
  <%#= f.error_messages %>

  <fieldset>
    <legend></legend>

    <%= f.input :visible, as: :select  %>
    <%= f.input :image, label: "Image or Logo" do %>
      <%= f.filepicker_field :image, button_class: "btn btn-primary btn-large"  %>
    <% end %>
    <%= f.input :promoter_media %>
    <%= f.association :location, label_method: :city, include_blank: false, label: "Choose City" %>
    <%= f.input :new_location, label: "Or Enter Full Address", placeholder: "123 Cleveland Street, Dublin, Ireland" %>

    <div class="form-actions">
        <%= f.submit nil, class: "btn btn-primary" %>
        <%= link_to 'Cancel', promoter_root_path, class: 'btn' %>
    </div>
  </fieldset>

<% end %>