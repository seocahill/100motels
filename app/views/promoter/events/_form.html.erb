<%= simple_form_for [:promoter, @event], :html => { class: 'form-horizontal' } do |f| %>
  <%#= f.error_messages %>

  <fieldset>
    <legend><%= controller.action_name.capitalize %> Event</legend>

    <%= f.input :artist %>
    <%= f.input :venue %>
    <%= f.association :location, label_method: :city, include_blank: false, label: "Choose City" %>
    <%= f.input :new_location, label: "Or Enter Full Address", placeholder: "123 Cleveland Street, Dublin, Ireland" %>
    <%= f.input :venue_capacity %>
    <%= f.input :date %>
    <%= f.input :doors %>
    <%= f.input :ticket_price %>
    <%= f.input :target %>
    <%= f.input :video %>
    <%= f.input :music %>
    <%= f.input :image, label: "Upload Artist Images" do %>
        <%= f.filepicker_field :image, button_class: "btn btn-primary btn-medium" %>
    <% end %>

    <div class="form-actions">
        <%= f.submit nil, class: "btn btn-primary" %>
        <%= link_to 'Cancel', events_path, class: 'btn' %>
    </div>
  </fieldset>

<% end %>