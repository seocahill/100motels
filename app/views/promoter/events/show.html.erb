<div class="page-header"><h3><%= @event.artist %> in <%= @event.venue %> on <%= @event.date %></h3></div>

<h4>Customers</h4>

<%= will_paginate @line_items %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Email</th>
      <th>Ticket Admits:</th>
      <th>Total Price</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @line_items.each do |item| %>
    <tr>
      <td><%= item.order.name %> </td>
      <td><%= item.order.email %> </td>
      <td> <%= item.quantity %> </td>
      <td><%= item.order.total %> </td>
      <td> <span class="label label-warning">pending</span> </td>
    </tr>
    <% end %>
  </tbody>
</table>