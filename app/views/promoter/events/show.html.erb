<div class="page-header"><h3><%= @event.artist %> in <%= @event.venue %> on <%= @event.date %></h3></div>

<h4>Customers</h4>
<div class="btn-group">
  <%= link_to "Home", promoter_root_path, class: "btn btn-medium" %>
  <%= link_to "Charge All", root_path, class: "btn btn-medium", data: { confirm: 'Are you sure? 100 Motels and Stripe fees will be applied and are non-refundable?' } %>
  <%= link_to "PDF", promoter_event_path(@event, format: "pdf"), class: "btn btn-medium" %>
</div>
<%= will_paginate @line_items %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Email</th>
      <th>Ticket Admits:</th>
      <th>Total Price</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @line_items.each do |item| %>
    <tr>
      <% unless item.order.nil? %>
      <td><%= item.order.name %> </td>
      <td><%= item.order.email %> </td>
      <td> <%= item.quantity %> </td>
      <td><%= item.order.total %> </td>
      <td> <span class="label label-warning">pending</span> </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
