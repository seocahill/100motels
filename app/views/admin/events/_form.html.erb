<%= form_for [:admin, @event], html: {class: 'form', role: 'form'} do |f| %>
<div class="panel panel-default" id="admin-event-edit">
  <div class="panel-heading">
    <div class="text-right">
      <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
      <%= link_to "Cancel", root_path, class: "btn btn-default btn-lg" %>
    </div>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
      <% if @event.errors.any? %>
        <div class="alert alert-danger" >
          <a class="close" data-dismiss="alert">&#215;</a>
          <% @event.errors.full_messages.each do |msg| %>
            <%= content_tag :div, msg %>
          <% end %>
        </div>
      <% end %>
      <div class="form-group">
      <%= f.label "Name your event", class: " control-label" %>
      <div class="">
        <%= f.text_field :name, class: "form-control", placeholder: ""%>
      </div>
      </div>
      <div class="form-group">
      <%= f.label "City and country your event will be in", class: " control-label" %>
      <div class="">
        <%= f.text_field :location, class: "form-control", placeholder: "Berlin, Germany" %>
      </div>
      </div>
      <div class="form-group">
      <%= f.label "Date of event", class: " control-label" %>
      <div class="">
        <%= f.date_field :date, class: "form-control", value: Date.today.strftime('%Y-%m-%d') %>
      </div>
      </div>
      <div class="form-group">
      <%= f.label "Start time", class: " control-label" %>
      <div class="">
        <%= f.time_field :time, class: "form-control", value: Time.now.strftime("%H:%M") %>
      </div>
      </div>
      <div class="form-group">
      <%= f.label "how many tickets do you want to sell?", class: " control-label" %>
      <div class="">
        <%= f.number_field :target, class: "form-control", placeholder: "" %>
      </div>
      </div>
      <div class="form-group">
      <%= f.label :ticket_price, class: " control-label" %>
      <div class="">
        <%= f.number_field :ticket_price, class: "form-control", placeholder: ""%>
      </div>
      </div>
      <div class="form-group">
      <%= f.label "Check box to make your event visible to the public" %>
      <div class="">
        <%= f.check_box :visible, class: "form-control", placeholder: "" %>
      </div>
      </div>
      <%= f.hidden_field :image %>
      <%= f.hidden_field :about %>
      <div class="form-group">
      <div class="col-lg-offset-2 ">
        <div class=''>

        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
