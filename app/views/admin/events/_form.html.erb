<div class="row">
  <div class="col-lg-8 col-lg-offset-2 well">
  <h3 class="page-header"><%= controller.action_name.capitalize %> Event</h3>
  <%= form_for [:admin, @event], html: {class: 'form form-horizontal', role: 'form'} do |f| %>
  <div class="form-group">
  <%= f.label :name, class: "col-lg-2 control-label" %>
  <div class="col-lg-6">
    <%= f.text_field :name, class: "form-control", placeholder: ""%>
  </div>
  </div>
  <div class="form-group">
  <%= f.label :location, class: "col-lg-2 control-label" %>
  <div class="col-lg-6">
    <%= f.text_field :location, class: "form-control", placeholder: "" %>
  </div>
  </div>
  <div class="form-group">
  <%= f.label :date, class: "col-lg-2 control-label" %>
  <div class="col-lg-6">
    <%= f.date_field :date, class: "form-control", placeholder: ""%>
  </div>
  </div>
  <div class="form-group">
  <%= f.label :target, class: "col-lg-2 control-label" %>
  <div class="col-lg-6">
    <%= f.number_field :target, class: "form-control", placeholder: "" %>
  </div>
  </div>
  <div class="form-group">
  <%= f.label :ticket_price, class: "col-lg-2 control-label" %>
  <div class="col-lg-6">
    <%= f.number_field :ticket_price, class: "form-control", placeholder: ""%>
  </div>
  </div>
  <div class="form-group">
  <%= f.label :visible, class: "col-lg-2 control-label" %>
  <div class="col-lg-6">
    <%= f.check_box :visible, class: "form-control", placeholder: "" %>
  </div>
  </div>

  <div class="form-group">
  <div class="col-lg-offset-2 col-lg-6">
    <button type="submit" class="btn btn-primary btn-block">Submit</button>
  </div>
  </div>
  <% end %>
  </div>
</div>