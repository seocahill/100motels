<div class="container">
  <div class="row">
    <div class="col-lg-12 well well-large">
      <div class="row">
        <div class="col-lg-3">
            <div class="btn-group btn-block">
              <a type="button" class="btn btn-default btn-block dropdown-toggle" data-toggle="dropdown">
                <%= @event.name %> | <%= @event.location %> | <%= @event.date.strftime('%d %b') %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <% @events.each do |e| %>
                <li><%= link_to "#{truncate(@event.name, length: 15)} | #{truncate(e.location, length: 15)} | #{e.date.strftime('%d %b')}", admin_event_path(e) %></li>
                <% end %>
                <li class="divider"></li>
                <li><%= link_to "New Event", new_admin_event_path, class: '' %></li>
              </ul>
            </div>
            <button class="btn btn-block btn-default">Hide Event</button>
            <button class="btn btn-block btn-primary">Message Customers</button>
            <button class="btn btn-warning btn-block">Defer Event (<%= @event.left_to_go  %> left)</button>
            <button class="btn btn-danger btn-block">Cancel Event</button>
          <% if @orders.any?(&:stripe_event_tickets_sent?) %>
            <button class="btn-success btn-block">Orders Processed <i class="icon-ok"></i></button>
          <% else %>
            <%= link_to "Cash $100 in Orders", charge_all_orders_path(event_id: @event.id), method: :post, class: "btn btn-success btn-block", data: {confirm: 'Sure?'} %>
          <% end %>
            <%= link_to "Print <p></p>Orders PDF", admin_event_path(@event, format: "pdf"), class: "btn btn-block btn-info", target: "_blank" %>
        </div>
        <div class="col-lg-9">
          <form class="form-inline" role="form">
            <div class="form-group col-lg-12 pull-right">
              <label class="sr-only" for="exampleInputEmail2"></label>
              <input type="search" class="form-control input-lg" id="exampleInputEmail2" placeholder="Enter email">
            </div>
          </form>
          <table class="table table-striped table-bordered" id="admin-customers">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>UUID</th>
                <th>Quantity</th>
                <th>Order Total</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
              <tr>
                <td><%= order.name %> </td>
                <td><%= order.email %> </td>
                <td><%= order.uuid %> </td>
                <td><%= order.quantity %></td>
                <td><%= number_to_currency(order.total) %></td>
                <td><span class="label"><%= order.stripe_event %></span></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <%= will_paginate @orders %>
    </div>
  </div>
</div>