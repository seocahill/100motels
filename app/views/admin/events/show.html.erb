<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <ul class="list-inline">
        <li>
          <div class="btn-group">
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
              Change Event
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <% @events.each do |e| %>
              <li><%= link_to "#{truncate(@event.name, length: 15)} | #{truncate(e.location, length: 10)} | #{e.date.strftime('%d %b')}", admin_event_path(e) %></li>
              <% end %>
              <li class="divider"></li>
              <li><%= link_to "New Event", new_admin_event_path, class: '' %></li>
            </ul>
          </div>
        </li>
        <li><span class="well well-small"> Viewing: <%= link_to "#{truncate(@event.name)} | #{@event.location} | #{@event.date.strftime('%d %b')}", event_path(@event), target: "_blank" %></span></li>
        <li class="divider-vertical"></li>
        <li><span class="well well-small"><i class="icon-time"></i> Time: <%= @event.left_to_go  %> left</span></li>
        <li><span class="well well-small"><i class="icon-money"></i> Sales: <%= number_to_currency(@event.orders.sum(&:total_price)) %></span></li>
        <li class="visible"><span class="well well-small"><%= @event.private_or_public %></span></li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 well well-large">
      <div class="row">
        <div class="col-lg-12">
          <legend>
            Sales
            <span class="pull-right">
              <%= form_tag admin_event_path(@event), method: :get, class: "form-search" do %>
                  <div class="input-append">
                    <%= text_field_tag :query, params[:query], class: "input-medium input-append", placeholder: "Search Orders" %>
                    <button type="submit" class="btn">Search</button>
                  </div>
              <% end %>
            </span>
         </legend>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">
            <button class="btn btn-info btn-block hidden-desktop">Sales <%= number_to_currency(@event.orders.sum(&:total_price)) %></button>
          <% if @orders.any?(&:stripe_event_tickets_sent?) %>
            <button class="btn-success btn-block">Orders Processed <i class="icon-ok"></i></button>
          <% else %>
            <%= link_to "Cash Orders", charge_all_orders_path(event_id: @event.id), method: :post, class: "btn btn-success btn-block", data: {confirm: 'Sure?'} %>
          <% end %>
          <%= link_to "Orders PDF", admin_event_path(@event, format: "pdf"), class: "btn btn-block", target: "_blank" %>
        </div>
        <div class="col-lg-9">

          <table class="table table-striped table-bordered" id="admin-customers">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>UUID</th>
                <th>Quantity</th>
                <th>Order Total</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
              <tr>
                <td><%= order.name %> </td>
                <td><%= order.email %> </td>
                <td><%= order.uuid %> </td>
                <td><%= order.quantity %></td>
                <td><%= number_to_currency(order.total) %></td>
                <td><span class="label"><%= order.stripe_event %></span></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <%= will_paginate @orders %>

    </div>
  </div>
</div>