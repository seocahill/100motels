<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <form class="form-inline" role="form">
        <div class="form-group col-lg-12 pull-right">
          <label class="sr-only" for="exampleInputEmail2"></label>
          <input type="search" class="form-control input-lg" id="exampleInputEmail2" placeholder="Enter email">
        </div>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-striped table-bordered" id="admin-customers">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>UUID</th>
            <th>Quantity</th>
            <th>Order Total</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.name %> </td>
            <td><%= order.email %> </td>
            <td><%= order.uuid %> </td>
            <td><%= order.quantity %></td>
            <td><%= number_to_currency(order.total) %></td>
            <td><span class="label"><%= order.stripe_event %></span></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= will_paginate @orders %>
</div>