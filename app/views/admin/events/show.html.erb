<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown"><h3 class="page-header"><%= @event.name %> in <%= @event.location %> <b class="caret"></b></h3></a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
          <% current_user.events.each do |event| %>
            <li role="presentation"><%= link_to "#{event.name} in #{event.location}", admin_event_path(event) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3">
      <div class="list-group">
        <li href="#" class="list-group-item">
          <h4 class="list-group-item-heading">Time Left <span class="badge pull-right"><%= @event.left_to_go %></span></h4>
          <p class="list-group-item-text">Send a group email to your customers optionally rescheduling or cancelling the event.</p><br>
          <%= link_to "Notify Customers", new_admin_event_message_path(@event), class: "btn btn-info btn-block" %>
        </li>
        <li href="#" class="list-group-item">
          <h4 class="list-group-item-heading">Sales Orders <span class="badge pull-right"><%= @event.earnings %></h4>
          <p class="list-group-item-text">Charge all unpaid sales orders.</p><br>
          <%= button_to "Charge Customers", charges_path(event_id: @event.id), class: "btn btn-success btn-block", method: :create %>
        </li>
      </div>
    </div>
    <div class="col-lg-9">
      <form>
        <div class="input-group">
          <input type="search" name="query" class="form-control input-lg" value="<%= params[:query] %>">
          <div class="input-group-btn">
            <button type="submit" class="btn btn-default btn-lg" action='<%= admin_event_path(@event, query: params[:query]) %>'>Search</button>
            <%= link_to "PDF", admin_event_path(@event, format: 'pdf'),  class: "btn btn-default btn-lg" %>
          </div>
        </div>
      </form>
      <br>
      <table class="table table-striped table-bordered" id="admin-customers">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>UUID</th>
            <th>Quantity</th>
            <th>Order Total</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.name %> </td>
            <td><%= order.email %> </td>
            <td><%= order.id.truncate(8) %> </td>
            <td><%= order.quantity %></td>
            <td><%= number_to_currency(order.total) %></td>
            <td><span class="label label-info"><%= order.stripe_event %></span></td>
            <td><%= link_to "view", order_path(order) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>