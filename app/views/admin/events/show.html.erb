<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown"><h3 class="page-header"><%= @event.name %> in <%= @event.location %> <b class="caret"></b></h3></a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
          <% current_user.events.each do |event| %>
            <li role="presentation"><%= link_to event.name, admin_event_path(event) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3">
      <div class="list-group">
        <li href="#" class="list-group-item">
          <h4 class="list-group-item-heading">Time Left <span class="badge pull-right">3 months</span></h4>
          <p class="list-group-item-text">Send a group email to your customers optionally rescheduling or cancelling the event.</p><br>
          <button class="btn btn-info btn-block">Notify Customers</button>
        </li>
        <li href="#" class="list-group-item">
          <h4 class="list-group-item-heading">Sales Orders <span class="badge pull-right">$1000</h4>
          <p class="list-group-item-text">Charge all unpaid sales orders.</p><br>
          <button class="btn btn-success btn-block">Charge Customers</button>
        </li>
        <li href="#" class="list-group-item">
          <h4 class="list-group-item-heading">Tickets <span class="badge pull-right">1000 tickets @ $10</span></h4>
          <p class="list-group-item-text">Change the ticket price or sales target. Price changes don't affect existing orders.</p><br>
          <button class="btn btn-block btn-default">Change Price or Target</button>
        </li>
        <li href="#" class="list-group-item">
          <h4 class="list-group-item-heading">Ticket Checking</h4>
          <p class="list-group-item-text">A Mobile first view for Checking the tickets of attendees.</p><br>
          <button class="btn btn-block btn-default">Switch to Ticket Checking</button>
        </li>
      </div>
    </div>
    <div class="col-lg-9">
      <div class="input-group">
        <input type="search" class="form-control input-lg">
        <div class="input-group-btn">
          <button type="button" class="btn btn-default btn-lg" tabindex="-1">Search Orders</button>
          <button type="button" class="btn btn-default btn-lg">Orders PDF</button>
        </div>
      </div>
      <br>
      <table class="table table-striped table-bordered" id="admin-customers">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>UUID</th>
            <th>Quantity</th>
            <th>Order Total</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.name %> </td>
            <td><%= order.email %> </td>
            <td><%= order.uuid.truncate(8) %> </td>
            <td><%= order.quantity %></td>
            <td><%= number_to_currency(order.total) %></td>
            <td><%= link_to "view", order_path(order) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>