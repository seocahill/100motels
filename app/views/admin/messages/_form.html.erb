<div class="row">
  <div class="col-lg-8 col-lg-offset-2 well">
  <h3 class="page-header">Send Notification</h3>
  <%= form_for [:admin, @event, @message], html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
  <%= f.label :date, "New date if rescheduling", class: "col-lg-3 control-label" %>
    <div class="col-lg-6">
      <%= f.date_field :date, class: "form-control", placeholder: ""%>
    </div>
  </div>
  <div class="form-group">
  <%= f.label :message, "Message to customers", class: "col-lg-3 control-label" %>
    <div class="col-lg-6">
      <%= f.text_area :message, class: "form-control", placeholder: "", rows: "10" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-3 col-lg-6">
      <div class="btn-group block-button-group">
        <%= f.submit "Message", class: "btn btn-info" %>
        <%= f.submit "Defer", name: "message[defer]", class: "btn btn-warning" %>
        <%= f.submit "Cancel", class: "btn btn-danger" %>
      </div>
    </div>
  </div>
  <% end %>
  </div>
</div>