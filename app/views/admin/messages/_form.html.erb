<div class="row">
  <div class="col-sm-12">
    <% if @message.errors.any? %>
      <div class="alert alert-danger" >
        <a class="close" data-dismiss="alert">&#215;</a>
        <% @message.errors.full_messages.each do |msg| %>
          <%= content_tag :div, msg %>
        <% end %>
      </div>
    <% end %>
    <h3 class="page-header">Notify Customers of <%= @event.name %> in <%= @event.location %> on <%= time_tag(@event.date) %></h3>

    <%= form_for [:admin, @event, @message], html: {class: "form-horizontal"} do |f| %>
      <div class="form-group">
        <%= f.label :date, "New date if rescheduling", class: "col-lg-3 control-label" %>
        <div class="col-lg-6">
          <%= f.date_field :date, class: "form-control input-lg", placeholder: ""%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :message, "Message to customers", class: "col-lg-3 control-label" %>
        <div class="col-lg-6">
          <%= f.text_area :message, class: "form-control", placeholder: "", rows: "10" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-offset-3 col-lg-2">
          <%= f.submit "Message", name: "message[option]", class: "btn btn-lg btn-info btn-block" %>
        </div>
        <div class="col-lg-2">
          <%= f.submit "Reschedule", name: "message[option]", class: "btn btn-lg btn-warning btn-block" %>
        </div>
        <div class="col-lg-2">
          <%= f.submit "Cancel Event", name: "message[option]", class: "btn btn-lg btn-danger btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
