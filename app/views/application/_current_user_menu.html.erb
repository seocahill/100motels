<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %> <i class="icon-user"></i></b></a>
  <ul class="dropdown-menu">
    <% if current_user.guest? %>
      <li><%= link_to "Save Account", signup_path  %></li>
    <% else %>
      <li><a href="#user-profile" data-toggle="modal">Your Account</a></li>
    <% end %>
    <% if current_user.events.empty? %>
      <li><%= link_to "New Event", new_organizer_event_path %></li>
    <% else %>
      <li> <%= link_to "Your Events", organizer_event_path(current_user.events.first) %>  </li>
      <li> <%= link_to "Check-in", organizer_event_tickets_path(current_user.events.first) %>  </li>
    <% end %>
    <li class="divider"></li>
    <% if !current_user.guest? && current_user.state == :unconfirmed %>
      <li><%= link_to "Confirm your email", email_confirmations_path, method: :post %></li>
    <% end %>
    <li><%= link_to "Sign out", logout_path %></li>
  </ul>
</li>
<%= render 'user_profile' %>