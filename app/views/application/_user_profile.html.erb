<% unless current_user.guest? %>
    <legend>Account</legend>
    <div>
      <p><i class="icon-edit"></i><%= current_user.user_name %></p>
      <p><i class="icon-edit"></i><%= current_user.user_email %></p>
      <p><%= current_user.password_reset %></p>
      <% if current_user.api_key %>
        <p><a href="#" class="stripe-connect light-blue dark"><span>Connected to Stripe <i class="icon-ok"></i></span></a></p>
      <% else %>
        <p><a href="/auth/stripe_connect" class="stripe-connect dark"><span>Connect with Stripe</span></a></p>
      <% end %>
    </div>
<% end %>