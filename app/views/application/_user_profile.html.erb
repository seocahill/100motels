<% unless current_user.guest? %>
  <div id="user-profile" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Your Profile</h3>
    </div>
    <div class="modal-body">
      <div class="container">
        <div class="row-fluid">
          <div class="span6" id="member-avatar">
            <%= current_user.avatar %>
          </div>
          <div class="span6">
            <dl>
              <dt>Name</dt>
              <dd><%= current_user.user_name %></dd>
              <dt>Email</dt>
              <dd><%= current_user.user_email %></dd>
            </dl>
            <%= form_for current_user.profile, remote: true do |f| %>
              <%= f.filepicker_field(:avatar, onchange: "this.form.submit();", button_text: "Change Avatar", button_class: "btn") %>
            <% end %>
            <%= current_user.password_reset %>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Done</button>
    </div>
  </div>
<% end %>