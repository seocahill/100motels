<div class="container">
  <h3>Sign In</h3>
  <%= simple_form_for :signin, { url: sessions_path, input_html: { class: 'form-horizontal well' } } do |f| %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :remember_me, inline_label: "Remember me", required: false, as: :boolean, label: false %>
    <%= f.button :submit, "Sign In" %>
  <% end %>
  <p><%= link_to "forgotten password?", new_password_reset_path, class: "" %></p>
</div>