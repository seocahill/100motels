<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-2">
      <h3 class="page-header">Sign In</h3>
      <%= form_for :signin, url: sessions_path, html: { class: 'form well', role: "form" } do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </label>
        </div>
        <%= f.submit "Sign In", class: 'btn btn-default' %>
      <% end %>
      <p><%= link_to "forgotten password?", new_password_reset_path, class: "" %></p>
    </div>
  </div>
</div>