<table width="600px" cellpadding="0" cellspacing="0" border="0" align="center">
	<tr>
		<td class="head-text" width="100%" valign="top">
			<h2>
				<%= @greeting %> We appreciate you :)
			</h2>
		</td>
	</tr>
</table>
<% @order.line_items.each do |l| %>
	<table width="600px" cellpadding="0" cellspacing="0" border="0" align="center">
		<tr>
			<td class="head-text" width="100%" valign="top">
				<h1>
					<small>100 Motels Presents!</small> <br>
					<%= l.event.artist %>
				</h1>
			</td>
		</tr>
	</table>
	<table width="600px" cellpadding="0" cellspacing="0" border="0" align="center">
		<tr>
			<td width="200px" valign="top">
				<img src="//placehold.it/170&text=QR+code">
			</td>
			<td width="200px" valign="top">
				<header class="head-text">
					<h5>
						live in <%=l.event.venue %> <br>
						 on <br>
						 <%= time_tag l.event.date %>
					</h5>
					<h3>
						Doors at <%= l.event.doors.strftime("%l:%M %p") %>
					</h3>
				</header>
			</td>
			<td width="200px" valign="top">
				<div class="head-text well">
					<br>
					<p>Admit</p>
						<h1><%= l.quantity %></h1>
					<p><%= "Person".pluralize(l.quantity) %> only</p>
				</div>
			</td>
		</tr>
	</table>
<% end %>
	<table width="600px" cellpadding="0" cellspacing="0" border="0" align="center">
		<tr>
			<td width="600px" valign="top">
				<h3>Your order</h3>
				<%= render 'orders/order' %>
			</td>
		</tr>
	</table>
	<table width="600px" cellpadding="0" cellspacing="0" border="0" align="center">
		<tr>
			<td width="600px" valign="top">
				<h3>Your receipt</h3>
				<div class="head-text" >
					<%= render 'orders/payment' %>
				</div>
			</td>
		</tr>
	</table>