<div class="page-header"><h3>Organizer Dash</h3>
  </div>
  <div class="row">
    <div class="span2">
      <ul class="nav nav-tabs nav-stacked">
        <li><%= link_to "Home", organizer_root_path %></li>
        <li><%= link_to "New Event", new_organizer_event_path %></li>
        <li><%= link_to "Edit Profile", edit_organizer_profile_path(@profile) %></li>
        <li><%= link_to %></li>
        <li><%= link_to %></li>
        <li><%= link_to %></li>

      </ul>
    </div>
    <div class="span10">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Artist</th>
            <th>Venue</th>
            <th>Date</th>
            <th>Attending</th>
            <th>Ticket Price</th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
          <tr>
            <td><%= link_to event.artist, [:organizer, event], class: "" %></td>
            <td> <%= event.venue %> </td>
            <td> <%= time_tag event.date %> </td>
            <td> <%= event.orders.to_a.sum { |item| item.quantity} %> </td>
            <td> <%= number_to_currency(event.ticket_price) %> </td>
            <td >
              <div class="btn-group pull-right">
                <%= link_to raw('<i class="icon-list"></i>'), [:organizer, event], class: "btn" %>
                <%= link_to raw('<i class="icon-eye-open"></i>'), event_path(event), class: "btn" %>
                <%= link_to raw('<i class="icon-pencil"></i>'), edit_organizer_event_path(event), class: "btn" %>
              </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
