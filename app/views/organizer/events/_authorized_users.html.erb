<% unless current_user.guest? %>
  <div id="authorized-users" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Authorized Users for this Event</h3>
    </div>
    <div class="modal-body">
      <div class="container">
        <div class="row-fluid">
          <div class="span12">
            <%= form_tag method: :post  do %>
            <table class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Email</th>
                  <th>Privileges</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @event.event_users do |eu| %>
                <tr>
                  <td><%= hidden_tag "event_user_ids[]", eu.id %> </td>
                  <td><%= eu.email %> </td>
                  <td><%= eu.state %> </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
        <%= submit_tag "Save", class: "btn btn-primary" %>
       <button class="btn" data-dismiss="modal">Exit</button>
    </div>
  </div>
  <% end %>
<% end %>