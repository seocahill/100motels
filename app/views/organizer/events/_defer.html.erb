  <div id="defer-event" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="defer-event" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3>Defer Your Event</h3>
    </div>
    <div class="modal-body">
      <div class="container">
        <div class="row">
          <div class="span6">
            <%= form_tag(defer_organizer_event_path(@event), method: :post) do %>
              <%= date_select("event", "date") %>
              <%= text_area_tag "reason" %>
              <%= submit_tag "Confirm Deferral", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
    <div class="defer-event modal-footer">

       <button class="btn" data-dismiss="modal">Cancel</button>
    </div>
    <% end %>
  </div>
