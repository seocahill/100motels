<div class="row">
  <div class="span2" id="button-menu">
    <%= form_tag  charge_or_refund_orders_path, method: :post  do %>
      <div class="btn-group">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          Change Event
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <% @events.each do |e| %>
          <li><%= link_to "#{e.artist} | #{e.venue} | #{e.date.strftime('%d %b')}", organizer_event_path(e) %></li>
          <% end %>
        </ul>
      </div>
  </div>
  <div class="span2">
    <div class="btn-group">
      <%= submit_tag "Charge Selected", name: 'charge', class: "btn" if current_user.api_key %>
      <%= submit_tag "Refund Selected", name: 'refund', class: "btn" if current_user.api_key %>
      <%= link_to image_tag('blue.png'), '/auth/stripe_connect' unless current_user.api_key %>
    </div>
  </div>
  <div class="span2 offset2">
    <div class="btn-group">
      <%= link_to "New Event", new_organizer_event_path(@event), class: "btn" %>
      <%= link_to "Cancel Event", cancel_organizer_event_path(@event), class: "btn", data: { confirm: "Are you sure?" } %>
    </div>
  </div>
  <div class="span3 offset1">
    <div class="btn-group">
      <%= link_to "Generate PDF", organizer_event_path(@event, format: "pdf"), class: "btn" %>
      <%= link_to "Check In View", organizer_event_tickets_path(@event), class: "btn" %>
    </div>
  </div> <!-- /button menu -->
  <hr>
</div> <!-- /row -->
<div class="row">
  <aside class="span2">
    <ul class="nav nav-tabs nav-stacked">
      <li><%= link_to "All", organizer_event_path(@event) %></li>
      <li><%= link_to "Pending", request.path + '?pending=true' %></li>
      <li><%= link_to "Paid", request.path + '?paid=true' %></li>
      <li><%= link_to "Tickets Sent", request.path + '?tickets_sent=true' %></li>
      <li><%= link_to "Failed", request.path + '?failed=true' %></li>
      <li><%= link_to "Refunded", request.path + '?refunded=true' %></li>
    </ul>
  </aside>
  <div class="span9">
      <%= hidden_field_tag "organizer", current_user.id %>
      <table class="table table-striped table-bordered" id="organizer-customers">
        <thead>
          <tr>
            <th>
              <button type="button" id="check_all", class="btn btn-mini">
                <i class="icon-ok"></i>
              </button>
            </th>
            <th>Customer Name</th>
            <th>Email</th>
            <th>Admits:</th>
            <th>Order Total</th>
            <th colspan="1" >Status</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= check_box_tag "order_ids[]", order.id %> </td>
            <td><%= order.name %> </td>
            <td><%= order.email %> </td>
            <td> <%= order.quantity %></td>
            <td> <%= number_to_currency(order.total) %></td>
            <td> <span class="label"><%= order.stripe_event  %></span> </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div> <!-- /table form -->
</div> <!-- /row -->
