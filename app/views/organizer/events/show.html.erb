<div class="row">
  <div class="span2" id="button-menu">
    <%= form_tag  charge_or_refund_orders_path, method: :post  do %>
      <div class="btn-group">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          Change Event
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <% @events.each do |e| %>
          <li><%= link_to "#{e.artist} | #{e.venue} | #{e.date.strftime('%d %b')}", organizer_event_path(e) %></li>
          <% end %>
        </ul>
      </div>
  </div>
  <div class="span2">
    <div class="btn-group">
      <%= submit_tag "Charge Selected", name: 'charge', class: "btn" if current_user.api_key %>
      <%= submit_tag "Refund Selected", name: 'refund', class: "btn" if current_user.api_key %>
      <%= link_to image_tag('blue.png'), '/auth/stripe_connect' unless current_user.api_key %>
    </div>
  </div>
  <div class="span2 offset2">
    <div class="btn-group">
      <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          Actions
          <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to "View Event", event_path(@event) %></li>
        <li><%= link_to "New Event", new_organizer_event_path(@event) %></li>
        <li><%= link_to "Cancel Event", cancel_organizer_event_path(@event), data: { confirm: "Are you sure you want to cancel the current event?" } %></li>
        <li><%= link_to "Orders PDF", organizer_event_path(@event, format: "pdf") %></li>
        <li><%= link_to "Tickets PDF", organizer_event_tickets_path(@event, format: "pdf") %></li>
        <li><%= link_to "Check-in", organizer_event_tickets_path(@event) %></li>
      </ul>
    </div>
  </div> <!-- /button menu -->
  <div class="span3 offset1"><h2>$2999 <small>(inc. orders, net fees)</small></h2></div>
  <hr>
</div> <!-- /row -->
<div class="row">
  <aside class="span2">
    <ul class="nav nav-tabs nav-stacked">
      <li><%= link_to raw('All <span class="badge badge-info pull-right">8</span>'), organizer_event_path(@event) %></li>
      <li><%= link_to raw('Ordered <span class="badge badge-warning pull-right">4</span>'), request.path + '?pending=true' %></li>
      <li><%= link_to "Paid", request.path + '?paid=true' %></li>
      <li><%= link_to raw('Ticketed <span class="badge badge-success pull-right">2</span>'), request.path + '?tickets_sent=true' %></li>
      <li><%= link_to raw('Failed <span class="badge badge-important pull-right">6</span>'), request.path + '?failed=true' %></li>
      <li><%= link_to raw('Refunded <span class="badge badge-inverse pull-right">10</span>'), request.path + '?refunded=true' %></li>
    </ul>
  </aside>
  <div class="span9">
    <ul class="inline">
  <li><h2>Sample</h2></li>
  <li><h2>Sample</h2></li>
  <li><h2>Sample</h2></li>
  <li><h2>Sample</h2></li>
  <li><h2>Sample</h2></li>
  <li><h2>Sample</h2></li>
</ul>
  </div>
  <div class="span9">
      <%= hidden_field_tag "organizer", current_user.id %>
      <table class="table table-striped table-bordered" id="organizer-customers">
        <thead>
          <tr>
            <th>
              <button type="button" id="check_all", class="btn btn-mini">
                <i class="icon-ok"></i>
              </button>
            </th>
            <th>Customer Name</th>
            <th>Email</th>
            <th>Admits:</th>
            <th>Order Total</th>
            <th colspan="1" >Status</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= check_box_tag "order_ids[]", order.id %> </td>
            <td><%= order.name %> </td>
            <td><%= order.email %> </td>
            <td> <%= order.quantity %></td>
            <td> <%= number_to_currency(order.total) %></td>
            <td> <span class="label"><%= order.stripe_event  %></span> </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div> <!-- /table form -->
</div> <!-- /row -->
