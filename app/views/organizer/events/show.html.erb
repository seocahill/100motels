<div class="row">
  <div class="span2" id="button-menu">
    <%= form_tag  charge_or_refund_orders_path, method: :post  do %>
      <div class="btn-group">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          <%= @event.artist %>
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <% @events.each do |e| %>
          <li><%= link_to "#{e.artist} | #{e.venue} | #{e.date.strftime('%d %b')}", organizer_event_path(e) %></li>
          <% end %>
        </ul>
      </div>
  </div>
  <div class="span2">
    <div class="btn-group">
      <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          Charge
          <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to image_tag('blue.png'), '/auth/stripe_connect' unless current_user.api_key %></li>
        <li><%= link_to "Charge All (inc.failed)" %></li>
        <li><%= submit_tag "Charge Selected", name: 'charge', class: "link-button" if current_user.api_key %></li>
        <li><%= submit_tag "Refund Selected", name: 'refund', class: "link-button" if current_user.api_key %></li>
        <li><%= submit_tag "Cancel Selected", name: 'cancel', class: "link-button" if current_user.api_key %></li>
        <li class="divider"></li>
        <li><%= link_to "Cancel Event", cancel_organizer_event_path(@event), data: { confirm: "Are you sure you want to cancel the current event?" } %></li>
      </ul>
    </div>
  </div>
  <div class="span2 offset2">
    <div class="btn-group">
      <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          Options
          <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to "View Event", event_path(@event) %></li>
        <li><%= link_to "New Event", new_organizer_event_path(@event) %></li>

        <li><%= link_to "Orders PDF", organizer_event_path(@event, format: "pdf") %></li>
        <li><%= link_to "Tickets PDF", organizer_event_tickets_path(@event, format: "pdf") %></li>
        <li><%= link_to "Check-in", organizer_event_tickets_path(@event) %></li>
      </ul>
    </div>
  </div> <!-- /button menu -->
</div> <!-- /row -->
<div class="row">
  <aside class="span2">
    <ul class="nav nav-tabs nav-stacked">
      <li><a href="<%= organizer_event_path(@event) %>">All<span class="badge badge-info pull-right"><%= @event.orders.sum(:quantity) %></span></a></li>
      <li><a href="<%= request.path + '?pending=true' %>">Ordered<span class="badge badge-warning pull-right"><%= @event.orders.pending.sum(:quantity) %></span></a></li>
      <li><a href="<%= request.path + '?tickets_sent=true' %>">Paid<span class="badge badge-success pull-right"><%= @event.orders.tickets_sent.sum(:quantity) %></span></a></li>
      <li><a href="<%= request.path + '?failed=true' %>">Failed<span class="badge badge-important pull-right"><%= @event.orders.failed.sum(:quantity) %></span></a></li>
      <li><a href="<%= request.path + '?refunded=true' %>">Refunded<span class="badge badge-inverse pull-right"><%= @event.orders.refunded.sum(:quantity) %></span></a></li>
    </ul>
  </aside>
  <div class="span9">
    <ul class="inline">
  <li><h3>Funding: <%= number_to_currency(@event.orders.funding.sum(:quantity) * @event.ticket_price) %> <small>(inc. ordered, paid, net of fees)</small></h3></li>
  <li class="pull-right"><h3>Capacity: <%= @event.capacity %> <small> (<%= @event.capacity - @event.orders.funding.sum(:quantity) %> tickets remaining)</small></h3></li>
</ul>
  </div>
  <div class="span9">
      <%= hidden_field_tag "organizer", current_user.id %>
      <table class="table table-striped table-bordered" id="organizer-customers">
        <thead>
          <tr>
            <th>
              <button type="button" id="check_all", class="btn btn-mini">
                <i class="icon-ok"></i>
              </button>
            </th>
            <th>Customer Name</th>
            <th>Email</th>
            <th>Admits:</th>
            <th>Order Total</th>
            <th colspan="1" >Status</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= check_box_tag "order_ids[]", order.id %> </td>
            <td><%= order.name %> </td>
            <td><%= order.email %> </td>
            <td> <%= order.quantity %></td>
            <td> <%= number_to_currency(order.total) %></td>
            <td> <span class="label"><%= order.stripe_event  %></span> </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div> <!-- /table form -->
</div> <!-- /row -->
