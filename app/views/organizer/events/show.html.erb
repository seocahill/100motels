<% if @event.state_cancelled? %>
  <h3>This Event was cancelled, contact support to request reactivation or <%= link_to "create a new one", new_organizer_event_path %>.</h3>
<% else %>
  <div class="row-fluid">
    <div class="span12">
      <ul class="inline">
        <li>
          <div class="btn-group">
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
              Change Event
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <% @events.each do |e| %>
              <li><%= link_to "#{truncate(e.venue, length: 10)} | #{e.date.strftime('%d %b')}", organizer_event_path(e) %></li>
              <% end %>
            </ul>
          </div>
        </li>
        <li class="muted"><span class="well well-small"><%= link_to "#{truncate(@event.title)} | #{@event.location.city} | #{@event.date.strftime('%d %b')}", event_path(@event) %></span></li>

         <li class="pull-right"><%= render 'search' %></li>
      </ul>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <ul class="inline">
        <li><h3><i class="icon-dashboard"></i></h3></li>
        <li><span class="label label-info">Time left <i class="icon-time"></i><%= @event.date > DateTime.now + 2.hour ? distance_of_time_in_words(Time.now, @event.date, include_seconds = false) : "Time's up!"  %></span></li>
        <li><span class="label label-info">Funding <i class="icon-money"></i> <%= number_to_currency(@event.orders.funding.sum(:total)) %></span></li>
        <li><span class="label label-info">unsold tickets: <%= @event.capacity - @event.orders.funding.sum(:quantity) %></span></li>
        <li><%= @decorated_event.private_or_public %></li>
      </ul>
    </div>
  </div>
  <hr>
  <div class="row-fluid">
    <div class="span12 well well-large">
      <div class="tabbable tabs-left"> <!-- Only required for left/right tabs -->
        <ul class="nav nav-tabs">
          <li class="active"><a href="#event-tab" data-toggle="tab">Event</a></li>
          <li><a href="#sales-tab" data-toggle="tab">Sales</a></li>
          <li><a href="#tickets-tab" data-toggle="tab">Tickets</a></li>
          <li><a href="#promotion-tab" data-toggle="tab">Promotion</a></li>
          <li><a href="#account-tab" data-toggle="tab">Account</a></li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active" id="event-tab">
            <%= simple_form_for :defer_event, url: defer_organizer_event_path, method: :post, html: {class: 'form-horizontal'} do |f| %>
            <legend>Defer Event</legend>
              <%= f.input :date, as: :datepicker, label: "Select a new date for your event", placeholder: "Current Date is #{@event.date.strftime('%d %b %Y')}" %>
              <%= f.input :message, as: :text, :input_html => { :cols => 5, :rows => 3 }, label: "Add an explanation for the deferral", placeholder: "Why should your customers keep supporting your event?" %>
              <%= f.submit "Proceed", data: { confirm: "Are you sure?"}, class: "btn" %>
            <% end %>
          </div>
          <div class="tab-pane" id="sales-tab">
            <div class="row-fluid">
              <div class="span12">
                <legend>Sales</legend>
              </div>
            </div>
            <div class="row-fluid">
              <div class="span3">
                <h5>
                  <% if @orders.any?(&:stripe_event_tickets_sent?) %>
                    <a href="#" class="btn btn-success">Orders Processed <i class="icon-ok"></i></a>
                  <% else %>
                    <%= link_to "Cash Orders", charge_all_orders_path(event_id: @event.id), method: :post, class: "btn btn-success", data: {confirm: 'Sure?'} %>
                  <% end %>
                </h5>
                <h5>
                  <%= link_to "Orders PDF", organizer_event_path(@event, format: "pdf"), class: "btn" %>
                </h5>
              </div>
              <div class="span9">
                <table class="table table-striped table-bordered" id="organizer-customers">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Email</th>
                      <th>UUID</th>
                      <th>Quantity</th>
                      <th>Order Total</th>
                      <th>Status</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @orders.each do |order| %>
                    <tr>
                      <td><%= order.name %> </td>
                      <td><%= order.email %> </td>
                      <td><%= order.uuid %> </td>
                      <td><%= order.quantity %></td>
                      <td><%= number_to_currency(order.total) %></td>
                      <td><%= order.stripe_event %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
            <%= will_paginate @orders %>
          </div>
          <div class="tab-pane" id="tickets-tab">
            <div class="row-fluid">
              <div class="span12">
                <legend>Tickets</legend>
              </div>
            </div>
            <div class="row-fluid">
                <div class="span6">
                  <h5><span class="badge large-badge badge-info"><%= @tickets.where('admitted is not null').count %> of <%= @tickets.count %> Admitted </span></h5><br>
                  <%= form_tag organizer_event_tickets_path(@event), method: :get, class: "form-search", autocomplete: :off do %>
                      <%= number_field_tag :query, params[:query], class: "input-medium", placeholder: "Enter Ticket Number" %>
                      <button type="submit" class="btn">Check</button>
                  <% end %>
                  <h5>
                    <%= link_to "Tickets PDF", organizer_event_tickets_path(@event, format: "pdf"), class: "btn" %>
                    </ul>
                  </h5>
                </div>
                <div class="span6">
                  <table class="table table-striped">
                    <tbody>
                        <tr>
                          <th>Number</th>
                          <th>Name</th>
                          <th>Email</th>
                          <th>Card</th>
                          <th>Admitted?</th>
                        </tr>
                      <% @tickets.each do |ticket| %>
                        <tr>
                          <td><%= ticket.number %></td>
                          <td><%= ticket.order.name %></td>
                          <td><%= ticket.order.email %></td>
                          <td><%= ticket.order.last4 %></td>
                          <td><%= ticket.admitted ? ticket.admitted.strftime("%e-%m-%y %H:%M") : "no" %> </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
          </div>
          <div class="tab-pane" id="promotion-tab">
            <p>social sharing etc here</p>
          </div>
          <div class="tab-pane" id="account-tab">
            <%= render 'user_profile' %>
          </div>
        </div>
      </div>
    </div> <!-- /table form -->
  </div> <!-- /row -->
<% end %>