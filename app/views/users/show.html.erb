<div class="container well">
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header">Settings</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <%= form_for @user, html: {class: 'form form-horizontal', role: 'form'} do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "col-lg-2 control-label" %>
          <div class="col-lg-6">
            <%= f.text_field :name, class: "form-control", placeholder: @user.name %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email, class: "col-lg-2 control-label" %>
          <div class="col-lg-6">
            <%= f.email_field :email, class: "form-control", placeholder: @user.email %>
          </div>
        </div>
        <div class="form-group">
          <%= label_tag :confirm_password, "Confirm password", class: "col-lg-2 control-label" %>
          <div class="col-lg-6">
            <%= password_field_tag :confirm_password, nil, class: "form-control", placeholder: @user.password %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-offset-2 col-lg-6">
            <button type="submit" class="btn btn-primary btn-block">Update Account</button>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-lg-3 col-lg-offset-1">
      <% if current_user.api_key %>
        <button type="button" class="btn btn-block btn-success"><span>Connected to Stripe <i class="icon-ok"></i></span></button>
      <% else %>
        <a href="/auth/stripe_connect" class="btn btn-block btn-default"><span>Connect with Stripe <i class="icon-credit-card"></i></span></a>
      <% end %><br>
      <%= link_to "Reset Password", password_resets_path(email: current_user.email), method: :post, class: "btn btn-block btn-info" %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header">Events</h3>
      <div class="table-responsive">
        <table class="table table-bordered table-condensed text-center">
          <tbody>
            <% @user.events.each do |e| %>
            <tr>
              <td><%= link_to e.name, public_event_path(e.id) %></td>
              <td><%= e.location %></td>
              <td>
                 <div class="progress">
                   <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                     <span class="">60% Complete</span>
                   </div>
                 </div>
              </td>
              <td>
                <div class="btn-group">
                  <button type="button" class="btn btn-default">Cash $1000</button>
                  <button type="button" class="btn btn-default">Defer (3 days left)</button>
                  <button type="button" class="btn btn-default">Cancel Event</button>
                </div>
              </td>
              <td>
                <div class="btn-group">
                  <button type="button" class="btn btn-default">Message 100 Customers</button>
                  <button type="button" class="btn btn-default">Hide Event</button>
                </div>
              </td>
              <td>
                <div class="btn-group">
                  <button class="btn btn-default">Save PDF</button>
                  <%= link_to raw("Order List"), admin_event_path(@user.events.first), class: "btn btn-default" %>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

