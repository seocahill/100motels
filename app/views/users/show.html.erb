<div class="container well">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Hey <%= @user.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <form class="form-horizontal" role="form">
        <div class="form-group">
          <label for="inputEmail1" class="col-lg-2 control-label">Email</label>
          <div class="col-lg-6">
            <input type="email" class="form-control" id="inputEmail1" placeholder="<%= @user.email %>">
          </div>
        </div>
        <div class="form-group">
          <label for="inputPassword1" class="col-lg-2 control-label">Name</label>
          <div class="col-lg-6">
            <input type="text" class="form-control" id="inputPassword1" placeholder="<%= @user.name %>">
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-offset-2 col-lg-6">
            <button type="submit" class="btn btn-default">Update Account</button>
          </div>
        </div>
      </form>
    </div>
    <div class="col-lg-3 col-lg-offset-1">
      <% if current_user.api_key %>
        <button type="button" class="btn btn-block btn-success"><span>Connected to Stripe <i class="icon-ok"></i></span></button>
      <% else %>
        <a href="/auth/stripe_connect" class="btn btn-block btn-default"><span>Connect with Stripe <i class="icon-credit-card"></i></span></a>
      <% end %>
      <%= link_to "Reset Password", password_resets_path(email: current_user.email), method: :post, class: "btn btn-block btn-info" %>
      <%= link_to raw("Events Admin  <i class='icon-double-angle-right pull'></i>"), admin_event_path(@user.events.first), class: "btn btn-block btn-primary" %>
    </div>
  </div>
</div>

