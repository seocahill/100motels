<div class="container well">
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header">Settings</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <% if current_user.guest %>
        <%= render 'form' %>
      <% else %>
        <%= form_for current_user, method: :patch, html: {class: 'form form-horizontal', role: 'form'} do |f| %>
          <div class="form-group">
            <%= f.label :name, class: "col-lg-2 control-label" %>
            <div class="col-lg-6">
              <%= f.text_field :name, class: "form-control", placeholder: @user.name %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :email, class: "col-lg-2 control-label" %>
            <div class="col-lg-6">
              <%= f.email_field :email, class: "form-control", placeholder: @user.email %>
            </div>
          </div>
          <div class="form-group">
            <%= label_tag :confirm_password, "Current password", class: "col-lg-2 control-label" %>
            <div class="col-lg-6">
              <%= password_field_tag :confirm_password, nil, class: "form-control", placeholder: @user.password %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-offset-2 col-lg-6">
              <button type="submit" class="btn btn-primary btn-block">Update Account</button>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-lg-3 col-lg-offset-1">
      <% unless current_user.guest %>
        <% if current_user.api_key and current_user.stripe_uid %>
          <button type="button" class="btn btn-block btn-success"><span>Connected to Stripe <i class="icon-ok"></i></span></button>
        <% else %>
          <a href="/auth/stripe_connect" class="btn btn-block btn-default"><span>Connect with Stripe <i class="icon-credit-card"></i></span></a>
        <% end %><br>
        <%= link_to "Reset Password", password_resets_path(email: current_user.email), method: :post, class: "btn btn-block btn-info" %><br>
        <%= link_to "New Event", new_admin_event_path, class: "btn btn-block btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header">Events Summary
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel body">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Event</th>
                <th>State</th>
                <th>Cash</th>
                <th>Tickets</th>
                <th>Time</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
            <% current_user.events.decorate.each do |event| %>
              <tr class="">
                <td><%= link_to "#{event.name} in #{event.location}", event_path(event) %></td>
                <td><%= event.is_visible %></td>
                <td><span class="badge"><%= event.earnings %></span></td>
                <td><span class="badge"><%= event.tickets_sold %>/<%= event.tickets_left %></span></td>
                <td><%= event.left_to_go %> to go</td>
                <td><%= link_to "admin", admin_event_path(event), class: "" %></td>
                <td><%= link_to "edit", edit_admin_event_path(event) %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

