<div class="container">
	<div class="row">
		<div class="span12">
			<div class="page-header">
				<h3>Lorem ipsum dolor sit amet</h3>
			</div>
		</div>
	</div>
	<div class="row">
		<aside id="users-searchform" class="span3">
			<header>
				<h3>Search Controls</h3>
			</header>
			<form>
				<div>
					<label>Choose a City</label>
				  <input results="10" type='search' autofocus="autofocus"/> <br>
				  <br>
				  <h4>Filter your results</h4> <br>
					<label>Filter By Rating</label>
					<input  type='range' min='0' max='50' value='0' autofocus="autofocus"/> <br>
				  <label>Filter By Activity</label>
					<input  type='range' min='0' max='50' value='0' autofocus="autofocus"/> <br>
				  <label>Filter By Fee</label>
					<input  type='range' min='0' max='50' value='0' autofocus="autofocus"/> <br>
				  <label>Filter By Average Attendance</label>
					<input  type='range' min='0' max='50' value='0' autofocus="autofocus"/> <br>

				</div>
			</form>
		</aside>


		<section id="user-index-grid" class="span9">
					<ul class="thumbnails">
						<% @users.each do |user| %>
						<li class="span3">
							<a class="thumbnail" href="#">
								<img src="http://placehold.it/300x240" alt="">
							</a>
							<h3><%= user.name %></h3>
							<p>Featuring a hero unit for a primary message and three supporting elements.</p>
							<p><%= button_to "View Profile", user_path(user), method: :get, class: "btn button-primary" %></p>
						</li>
						<% end %>
					</ul>
		</section>
	</div>
</div>