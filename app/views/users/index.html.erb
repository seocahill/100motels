<div class="container">
	<div class="row">
		<div class="span12">
			<div class="page-header">
				<h3>Users Index</h3>
			</div>
		</div>
	</div>
	<div class="row">
		<section id="user-index-grid" class="span9">
			<ul class="thumbnails">
				<% @users.each do |user| %>
				<li class="span3">
					<a class="thumbnail" href="#">
						<img src="http://placehold.it/300x240" alt="">
					</a>
					<h3><%= user.name %></h3>
					<p>Featuring a hero unit for a primary message and three supporting elements.</p>
					<p><%= button_to "View Profile", user_path(user), method: :get, class: "btn button-primary" %></p>
				</li>
				<% end %>
			</ul>
		</section>
	</div>
</div>