
<h2>Edit your Account</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :required => true, :autofocus => true %>
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :media, :required => false, :autofocus => true, label: "Artist Media", hint: "a youtube, vimeo or soundcloud link to your work" %>
    <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
    <%= f.input :avatar, hint: "upload or select images from twitter, facebook and other services" do %>
      <%= f.filepicker_field :avatar, button_class: "btn btn-primary btn-medium"  %>
    <% end %>
    <%= f.association :location, label_method: :city, include_blank: false, label: "Choose City" %>
    <%= f.input :new_location, label: "Or Enter Full Address", placeholder: "123 Cleveland Street, Dublin, Ireland" %>
    <hr>
    <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
    <%= link_to "Back", :back, class: "btn" %>
  </div>
<% end %>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>


