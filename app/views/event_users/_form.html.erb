<%= simple_form_for(@event_user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :event_id, as: :hidden, input_html: {value: @event.id} %>
    <%= f.input :email %>
    <%= f.select :state, [['read', 0], ['edit', 1], ['admin', 2], ['organizer', 3]] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
