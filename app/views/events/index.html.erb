<div class="container">
	<div class="row">
		<div class="col-lg-12">
      <form>
        <div class="input-group">
          <input type="search" name="query" class="form-control input-lg" placeholder="<%= params[:query] %>">
          <div class="input-group-btn">
            <button type="submit" class="btn btn-default btn-lg" action='<%= events_path(query: params[:query]) %>'>Search</button>
            <button type="submit" class="btn btn-default btn-lg" action="/events">Reset</button>
          </div>
        </div>
      </form>
    </div>
  </div>
	<hr>
	<div class="row">
  <% @events.each do |event| %>
    <div class="col-md-4 portfolio-item">
      <%= link_to event_path(event) do %>
        <%= filepicker_image_tag event.image, w: 380, h: 200, fit: 'crop' %>
        <h3><%= event.name %></h3>
      <% end %>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod odio, gravida pellentesque urna varius vitae.</p>
    </div>
  <% end %>
  </div>
</div>