<div class="container">
	<div class="row">
		<div class="col-lg-12">
      <form>
        <div class="input-group search">
          <input type="search" name="query" results=5 class="form-control input-lg" value="<%= params[:query] %>">
          <div class="input-group-btn">
            <button type="submit" class="btn btn-default btn-lg" action='<%= events_path(query: params[:query]) %>'>Search</button>
          </div>
        </div>
      </form>
    </div>
  </div>
	<hr>
	<div class="row">
  <% @events.each do |event| %>
    <div class="col-md-4 portfolio-item">
      <%= link_to event_path(event) do %>
        <%= @presenter.index_image(event) %>
        <h3><%= truncate(event.name, length: 15) %> <small><%= event.date.strftime('%d/%m') %> in <%= event.location %>.</small></h3>
      <% end %>
        <p></p>
    </div>
  <% end %>
  </div>
</div>