<% content_for :head do %>
  <%#= tag :meta, property: "fb:app_id", content: ENV["FACEBOOK_APP_ID"] %>
  <%= tag :meta, property: "og:site_name", content: "100 Motels" %>
  <%#= tag :meta, property: "og:type", content: "cinematron:movie" %>
  <%= tag :meta, property: "og:title", content: @event.title %>
  <%= tag :meta, property: "og:url", content: event_url(@event) %>
  <%#= tag :meta, property: "og:image", content: request.protocol + request.host_with_port + image_path(@movie.image) %>
<% end %>
<% if @event.visible?|| @event.event_owner? %>
	<% @event.header %>
	<div class="container" id="event-background">
		<% if @event.event_owner? %>
		<div class="admin-bar">
			<ul class="inline pull-right">
			  <li><i class="icon-credit-card"></i><span class="label label-important">Payments not activated</span></li>
			  <li><i class="icon-eye-close"></i><span class="label label-warning">Event is private</span></li>
			  <li>
			  	<div class="dropdown">
		        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
		          <h4><i class="icon-cog"></i>event settings</h4>
		        </a>
		        <ul class="dropdown-menu">
							<li><%= @event.edit %></li>
							<li><%= link_to "Event Admin", organizer_event_path(@event) %>
							<li><a href="#"><%= @event.toggle_visible %></a></li>
							<li><%= @event.filepicker %></li>
							<li><%= link_to "Copy Event", duplicate_organizer_event_path(@event) %></li>
							<li><%= link_to "Delete Event", organizer_event_path(@event), method: :delete, data: { confirm: "Are you sure you want to cancel the current event?" } %></li>
		        </ul>
		      </div>
			   </li>
			</ul>
		</div>
		<% end %>
		<section id="event-information">
			<div class="row-fluid">
				<div class="span12 event-header">
					<h2>
						<small><%= @event.edit_icon %> <%= @organizer.user_name || "organizer's business name" %> presents </small><br>
						<%= @event.edit_icon %> <%= @event.title %><br>
						<small>
							<%= @event.edit_icon %> <%= @event.date %> |
							<a href="#tickets"><i class="icon-shopping-cart"></i></a>
							<a href="#location"><i class="icon-map-marker"></i></a>
							<a href="#event-playlist"><i class="icon-headphones"></i></a>
							<a href="#event-vimeo"><i class="icon-film"></i></a>
							<a href="#about"><i class="icon-info-sign"></i></a><br>
							<a href="#bio"><i class="icon-quote-left"></i></a><br>
							<%= @event.location.city %>
						</small>
					</h2>
				</div>
			</div>
			<hr>
			<div class="row-fluid poster-information=" id="inlay">
				<div class="span6 event-poster" data-url='<%= @event.image %>'>
					<h1><i class="icon-info-sign muted" id="about"></i></h1>
					<div class="event-funding">
						<h3> <%= @event.edit_icon %> <%= @event.artist %></h3>
						<h3>
							<div class="addthis_toolbox">
								<div class="custom_images">
									<a class="addthis_button_facebook"><i class="icon-facebook"></i></a>
									<a class="addthis_button_twitter"><i class="icon-twitter"></i></a>
									<a class="addthis_button_more"><i class="icon-share"></i></a>
								</div>
							</div>
						</h3>
						<% if @event.on_sale? %>
							<h4><%= @event.left_to_go %> left to sell <%= @event.sales %> tickets! <i class="icon-question-sign" data-toggle="popover" title="" data-content="More about Crowdfunding"></i></h4>
							<div class="progress">
							  <div class="bar" style="width: 100%;" data-funded="<%= @event.per_cent_funded %>"><%= @event.per_cent_funded %>% funded</div>
							</div>
						<% else %>
							<h3> <small>Ticket sales for this event have now finished. Thanks for your support!</small></h3>
						<% end %>
					</div>
				</div>
				<hr>
				<div class="span6 event-ticket-orders" data-price='<%= @event.ticket_price %>' id="tickets">
					<h1><i class="icon-shopping-cart muted"></i></h1>
					<div class="pagination-centered">
						<% if @event.on_sale? %>
							<h3><%= @event.edit_icon %> <%= @event.price %><small> each</small></h3>
							<%= @event.ticket_form %>
							<h3><%= @event.order_total %>
								<small><span class="charge-info" data-toggle="popover" title="" data-content="Card Processing is 2.9% + 30c + our fee (1% - 2.5% dependant on the type of event)" data-original-title="Processing Fees" data-placement="bottom">
									inc.charges
								  </span>
	      				</small>
	      			</h3>
						<% end %>
					</div>
				</div >
			</div>
		</section>
		<hr>
		<section id="event-media" class="event">
			<div class="row-fluid">
				<div class="span6">
					<h1><i class="icon-quote-left muted" id="bio"></i></h1>
					<div class="about about-event"><%= @event.edit_icon %> <%= @event.about_section %></div>
				</div>
				<div class="span6">
					<h1><i class="icon-map-marker muted" id="location"></i></h1>
					<div class="row-fluid" >
						<div class="span6 event-map address"><%= @event.map %></div>
						<div class="span6 event-map venue-info">
							<dl>
								<dt>Venue:</dt>
								<dd><strong><%= @event.edit_icon %> <%= @event.venue %></strong></dd><br>
								<dt>Address:</dt>
								<dd>
									<address>
									  <%= @event.edit_icon %> <%= @event.venue_address %>
									</address>
								</dd>
								<dt>Doors open at:</dt>
								<dd><%= @event.edit_icon %> <%= @event.doors %></dd>
							</dl>
							<% unless @organizer.guest? %>
								<a href="#privateMessage" data-toggle="modal">Contact Organizer <i class="icon-envelope"></i></a>
								<%= render 'private_messages/contact_form' %>
							<% end %>
						</div>
					</div>
				</div>
			</div>
			<hr>
			<div class="row-fluid">
				<div class="span6" id="event-vimeo">
					<h1><i class="icon-film muted"></i></h1>
						<%= @event.edit_icon %> <%= @event.video %><div class="flex-video video"><%= @event.video_iframe %></div>
				</div>
				<div class="span6" id="event-playlist">
					<h1><i class="icon-headphones muted"></i></h1>
						<%= @event.edit_icon %> <%= @event.music %><div class="music"><%= @event.music_iframe %></div>
				</div>
			</div>
		</section>
	</div> <!-- /container -->
<% else %>
<h3>This Event has not been published.</h3>
<% end %>

<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-513ba15373992907">
	var addthis_share = {
     url_transforms : {
          shorten: {
               twitter: 'bitly'
          }
     },
     shorteners : {
          bitly : {}
     }
	}
	var addthis_config = {
     data_track_clickback: false
	}
</script>