<div class="container">
	<header>
		<% title(@event.artist, @event.venue, @event.date) %>
	</header>
	<div class="row">
		<div class="span3">
			<% if user_signed_in? && current_user == @event.profile.user %>
				<%= link_to "Text Editor", "/editor" + request.path, class: "btn editor", rel: "popover", data: { content: "This will reveal a toolbar allowing you to edit text content on the page. Click the save icon in the toolbar when you're finished.", trigger: "hover", :"original-title" => "Editing Content" }, id: "edit_link" %>
				<%= link_to "Edit Settings", edit_organizer_event_path(@event), class: "btn editor", rel: "popover", data: { content: "Edit the Event details and visibility.", trigger: "hover", :"original-title" => "Event Settings" }, id: "edit_link" %>
			<% elsif @event.users.include?(current_user) %>
				<button class="btn btn-success requests" rel="popover" data-content="You have requested to play support at this event. Check the status of this request or cancel it in your user account." data-original-title="About requests" data-trigger="hover">Support Requested <i class="icon-check icon-white"></i></button>
			<% elsif user_signed_in? %>
				<%= link_to "Ask to Support", requests_path(event_id: @event.id, organizer_id: @event.profile.user_id), class: "btn btn-large requests", method: :post, rel: "popover", data: { content: "By pressing this button the Organizer of this event will receive a private message containing your contact details and your media. Click on Help &Info for more on how requests work.", trigger: "hover", :"original-title" => "About Requests" } %>
			<% end %>
		</div>
		<div class="span2">
		</div>
		<div class="span2">
			<% if user_signed_in? && current_user == @event.profile.user %>
				<strong>State: <span class="badge"><%= @event.state %></span></strong>
			<% end %>
		</div>
	</div>
	<section id="event-info" class="section-box">
		<div class="row-fluid">
			<div class="label-box">Ticket Info</div>
				<div class="span3">
					<% if @event.image? %>
						<%= filepicker_image_tag @event.image, w: 300, h: 300, fit: 'crop' %>
					<% else %>
						<img src="//quickimage.it/300&text=Artist">
					<% end %>
				</div>
				<div class="span5" align="center">
					<h2>
						<small><%= @organizer.try(:promoter_name) %> presents...</small> <br>
						<div id="artist" data-mercury="full"><%= @event.artist %></div>
					</h2>
					<h4>
						<%= @event.date.strftime("%a, %d %b %Y") %> <br>
						 <br>
						<%= @event.venue %> <br>
					</h4>
					<h1>~</h1>
					<h4>
						Doors  <br>
						at <br>
						<%= @event.doors.strftime("%l:%M %p") %>
					</h4>
				</div>
				<div class="span3">
					<div class="section-box centered-box">
						<h1>
							<%= number_to_currency(@event.ticket_price) %> <br>
							<small>per ticket</small>
						</h1>
						<%= render 'add_to_cart_form' %>
					</div>
				</div>
		</div>
	</section>

	<section id="about-artist" class="section-box">
		<div class="label-box">Event Info</div>
		<div class="row">
			<div class="span4">
				<h3>About...</h3>
				<div class="row-fluid">
					<div class="span5" align="center">
						<a class="thumbnail" href="<%= profile_path(@organizer) %>">
							<%= filepicker_image_tag @organizer.try(:image), w: 100, h: 100, fit: 'crop' %>
						</a>
					</div>
					<div class="span7" align="center">
						<h1><%= @event.viable %> <br>Tickets <br>Left</h1>
					</div>
				</div>
				<div class="row">
					<div class="span4">
						<h3><%= @organizer.promoter_name %> says...</h3>
						<div id="about" data-mercury="full">
							<% if @event.about? %>
								<%= raw @event.about %>
							<% else %>
								<%= render 'body_holder' %>
							<% end %>
						</div>
					</div>
				</div>
			</div>
			<div class="span6">
				<h3>
					Watch....
					<% if @event.video_html? %>
						<%= @event.video_html  %>
					<% else %>
						<img src="//quickimage.it/630x430&text=Vimeo" class="align_center">
					<% end %>
				</h3>
				<h3>
					Listen....
					<% if @event.music_html? %>
						<%= @event.music_html  %>
					<% else %>
						<img src="//quickimage.it/565x170&text=Soundcloud+playlist" class="align_left">
					<% end %>

				</h3>
					<h3>Share...</h3>
				<div class="well">
						<span class='st_sharethis_large' displayText='ShareThis'></span>
						<span class='st_facebook_large' displayText='Facebook'></span>
						<span class='st_pinterest_large' displayText='Pinterest'></span>
						<span class='st_wordpress_large' displayText='WordPress'></span>
						<span class='st_stumbleupon_large' displayText='StumbleUpon'></span>
						<span class='st_tumblr_large' displayText='Tumblr'></span>
						<span class='st_reddit_large' displayText='Reddit'></span>
						<span class='st_myspace_large' displayText='MySpace'></span>
						<span class='st_identi_large' displayText='identi.ca'></span>
						<span class='st_googleplus_large' displayText='Google +'></span>
						<span class='st_twitter_large' displayText='Tweet'></span>
						<span class='st_email_large' displayText='Email'></span>
				</div>
			</div>
	</section>
</div>

