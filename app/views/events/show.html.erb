<% if @event.visible?|| @event.event_owner? %>
	<% @event.header %>
	<div class="container" id="event-background">
		<section id="event-information" class="event">
			<div class="row-fluid event-header">
				<div class="span12">
					<hr>
					<h2>
						<small><%= @organizer.name || "no name" %> presents </small><br>
						<%= @event.title %><br>
						<small>
							<%= @event.date %> | <a href="#tickets"><i class="icon-shopping-cart"></i></a> <a href="#location"><i class="icon-map-marker"></i></a>
							<a href="#music"><i class="icon-headphones"></i></a> <a href="#about"><i class="icon-info-sign"></i></a>
						</small>
					</h2>
					<% if @event.event_owner? %>
						<div class="dropdown">
			        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
			          <h4><i class="icon-cog"></i>event settings</h4>
			        </a>
			        <ul class="dropdown-menu">
								<li><%= @event.edit %></li>
								<li><%= link_to "Event Admin", organizer_event_path(@event) %>
								<li><a href="#"><%= @event.toggle_visible %></a></li>
								<li><%= @event.filepicker %></li>
			        </ul>
			      </div>
			    <% end %>
					<hr>
				</div>
			</div>
			<div class="row-fluid poster-information">
				<div class="span6 event-poster" data-url='<%= @event.image %>'>
					<h3><small>Featuring:</small> <%= @event.artist %></h3>
					<% if @event.on_sale? %>
						<h3><small>We need </small><%= @event.sales %><small> more patrons to pay for this show please help!</small></h3>
					<% else %>
						<h3> <small>Ticket sales for this event have now finished. Thanks for your support!</small></h3>
					<% end %>
					<h3><i class="icon-twitter-sign"></i> <i class="icon-facebook-sign"></i></h3>
				</div>
				<div class="span6 event-ticket-orders" data-price='<%= @event.ticket_price %>' id="tickets">
					<% if @event.on_sale? %>
						<h3><%= @event.price %><small> each</small></h3>
						<%= @event.ticket_form %>
						<h3><%= @event.order_total %></h3>
					<% end %>
				</div>
			</div>
		</section>
		<hr>
		<section id="event-media" class="event">
			<div class="row-fluid">
				<div class="span6"><h1><i class="icon-info-sign muted" id="about"></i></h1><div class="about-event" ><%= @event.about %></div></div>
				<div class="span6">
					<h1><i class="icon-map-marker muted" id="location"></i></h1>
					<div class="row-fluid" >
						<div class="span6 event-map"><%= @event.map %></div>
						<div class="span6 event-map venue-info">
							<dl>
								<dt>Venue:</dt>
								<dd><strong><%= @event.venue %></strong></dd><br>
								<dt>Address:</dt>
								<dd>
									<address>
									  <%= @event.location.address %>
									</address>
								</dd>
								<dt>Event begins at:</dt>
								<dd><%= @event.doors %></dd>
							</dl>
							<a href="#privateMessage" data-toggle="modal">Contact Organizer <i class="icon-envelope"></i></a>
							<%= render 'private_messages/contact_form' %>
						</div>
					</div>
				</div>
			</div>
			<hr>
			<h1><i class="icon-headphones muted" id="music"></i></h1>
			<div class="row-fluid pagination-centered">
				<div class="span6"><%= @event.video %><div class="flex-video"><%= @event.video_iframe %></div></div>
				<div class="span6"><%= @event.music %><%= @event.music_iframe %></div>
			</div>
		</section>
	</div> <!-- /container -->
<% else %>
<h3>This Event has not been published.</h3>
<% end %>