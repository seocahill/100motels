<!DOCTYPE html>
<html>
  <head>
    <title> <%= yield(:title) %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= filepicker_js_include_tag %>
    <%= csrf_meta_tags %>
    <%= yield :head %>
    <!--if [lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body id="<%= params[:controller].parameterize %>_controller">
    <div class="wrapper">
      <div class="navbar">
        <div class="navbar-inner">
          <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
            <%= link_to "100 Motels", root_path, class: "brand" %>
            <div class="nav-collapse collapse">
              <ul class="nav">
                <li><%= link_to "Events", events_path %></li>
                <li><%= link_to "Info", info_path %></li>
                <li><a id="Intercom" href="mailto:fc8518d2134e8c1f1d72067b7e19a67d63f6bbed@incoming.intercom.io">Support</a></li>
              </ul>
              <ul class="nav pull-right">
                <% unless current_user %>
                  <li><%= link_to "Sign up", signup_path %></li>
                  <li><%= link_to "Sign in", login_path %></li>
                <% end %>
                <li class="divider-vertical"></li>
                <% if current_user %>
                  <%= render "current_user_menu" %>
                <% end %>
              </ul>
            </div><!-- /.nav-collapse -->
          </div> <!-- container -->
        </div><!-- /navbar-inner -->
      </div>  <!-- /navbar -->
      <div class="container" id="main">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key == :notice ? "success" : "error" %>">
            <a class="close" data-dismiss="alert">&#215;</a>
            <%= content_tag :div, value, :id => "flash_#{key}" if value.is_a?(String) %>
          </div> <!-- /flash -->
        <% end %>
        <%= yield %>
      </div> <!-- /content container -->
      <div class="push"></div>
    </div> <!-- /wrap -->
    <footer>
      <div class="container">
        <ul class="inline">
          <li>Â© 100 Motels Ltd 2013</li>
          <li><%= link_to "Terms of Service", info_path %></li>
          <li><%= link_to "Legal and Privacy", info_path %></li>
          <li><%= link_to "Info and Help", info_path %></li>
        </ul>
      </div>
    </footer>
  </body>
</html>
