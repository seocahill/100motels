<!DOCTYPE html>
<html>
  <head>
    <title> <%= yield(:title) %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= filepicker_js_include_tag %>
    <%= javascript_include_tag "application" %>
    <script src="https://checkout.stripe.com/v2/checkout.js"></script>
    <%= csrf_meta_tags %>
    <%= yield :head %>
    <!--if [lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <div class="wrapper">
      <nav class="navbar navbar-default" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to "100 Motels", root_path, class: "brand navbar-brand" %>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li><%= link_to "Events", events_path %></li>
              <li><%= link_to "Info", info_path %></li>
              <li><a id="Intercom" href="mailto:fc8518d2134e8c1f1d72067b7e19a67d63f6bbed@incoming.intercom.io">Support</a></li>
              <% if current_user %>
                <li class=""><a href="http://www.hipchat.com/g0s1iGFVm" target="_blank">Live Chat</a></li>
              <% end %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <% unless current_user %>
                <li><%= link_to "Sign up", signup_path %></li>
                <li><%= link_to "Sign in", login_path %></li>
              <% end %>
              <!-- <li class="divider-vertical"></li> -->
              <% if current_user %>
                <li><%= link_to(current_user.guest? ? "Save your account" : "Admin", user_path(current_user)) %></li>
                <li><%= link_to "Sign out", logout_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
      <div>
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key == :notice ? "success" : "danger" %>">
            <a class="close" data-dismiss="alert">&#215;</a>
            <%= content_tag :div, value, :id => "flash_#{key}" if value.is_a?(String) %>
          </div> <!-- /flash -->
        <% end %>
        <%= yield %>
      </div> <!-- /content container -->
      <div class="push"></div>
    </div> <!-- /wrap -->
    <hr>
    <footer>
      <div class="container">
        <ul class="list-inline">
          <li>Â© 100 Motels Ltd 2013</li>
          <li><%= link_to "Terms of Service", info_path %></li>
          <li><%= link_to "Legal and Privacy", info_path %></li>
          <li><%= link_to "Info and Help", info_path %></li>
          <li><%= link_to "Sign Up", signup_path %></li>
          <li><a href="http://blog.100motels.com">Blog</a></li>
        </ul>
      </div>
    </footer>
  </body>
</html>
