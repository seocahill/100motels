<!DOCTYPE html>
<html>
  <head>
    <title>

    </title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= filepicker_js_include_tag %>
    <%= csrf_meta_tags %>
    <!--if [lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to "100 Motels", root_path, class: "brand" %>
          <div class="nav-collapse">
            <ul class="nav topbar" id="">
              <li><%= link_to "Events", events_path %></li>
              <li><%= link_to "Info", info_path %></li>
            </ul>
            <ul class="nav pull-right topbar">
              <% unless current_user %>
                <li><%= link_to "Sign up", signup_path %></li>
                <li><%= link_to "Sign in", login_path %></li>
              <% end %>
              <li class="divider-vertical"></li>
              <% if current_user %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %> <i class="icon-user"></i></b></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Save your Account", signup_path if current_user.guest? %></li>
                    <li><%= link_to "User Account", user_path(current_user) unless current_user.guest? %></li>
                    <% if current_user.events.empty? %>
                      <li><%= link_to "New Event", new_organizer_event_path %></li>
                    <% else %>
                      <li> <%= link_to "Your Events", organizer_event_path(current_user.events.first) %>  </li>
                    <% end %>
                    <li class="divider"></li>
                    <li><%= link_to "Sign out", logout_path %></li>
                  </ul>
                </li>
              <% end %>
            </ul>
          </div><!-- /.nav-collapse -->
        </div> <!-- container -->
      </div><!-- /navbar-inner -->
    </div>  <!-- /navbar -->
    <div id="wrap">
      <div class="container" id="main">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key == :notice ? "success" : "error" %>">
            <a class="close" data-dismiss="alert">&#215;</a>
            <%= content_tag :div, value, :id => "flash_#{key}" if value.is_a?(String) %>
          </div> <!-- /flash -->
        <% end %>
        <%= yield %>
      </div> <!-- /content container -->
      <div id="push"></div>
    </div> <!-- /wrap -->

    <div id="footer">
      <div class="container">
        <a href="//github.com/seocahill">&copy; Seo Cahill 2012</a>
      </div>
    </div>
  </body>
</html>
