<!DOCTYPE html>
<html>
  <head>
    <title>
    	<% if content_for?(:title) %>
    		<%= yield(:title) %>
    	<% else %>
    		100 Motels
    	<% end %>
    </title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= filepicker_js_include_tag %>
    <%= csrf_meta_tags %>
    <!--if [lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body data-spy="scroll" data-target=".sidebar">
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container" style="width: auto;">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to "100 Motels", root_path, class: "brand" %>
          <div class="nav-collapse">
            <ul class="nav topbar" id="">
              <li><%= link_to "Events", events_path %></li>
              <li><%= link_to "Info", info_path %></li>
              <!-- <li><%#= render 'events/search' %></li> -->
            </ul>
            <ul class="nav pull-right topbar">
              <% unless user_signed_in? %>
                <li><%= link_to "Sign up", new_user_registration_path %></li>
                <li><%= link_to "Sign in", new_user_session_path %></li>
              <% end %>
              <li class="divider-vertical"></li>
              <% if user_signed_in? %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %> <i class="icon-user"></i></b></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "User Account", current_user %></li>
                    <li> <%= link_to "Your Events", organizer_events_path %>  </li>
                    <li> <%#= link_to "Tickets", organizer_tickets_path %>  </li>
                    <li class="divider"></li>
                    <li><%= link_to "Sign out", destroy_user_session_path, :method => 'delete' %></li>
                  </ul>
                </li>
              <% end %>
            </ul>
          </div><!-- /.nav-collapse -->
        </div> <!-- container -->
      </div><!-- /navbar-inner -->
    </div>  <!-- /navbar -->
    <div id="wrap">
      <div class="container content" id="main">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key == :notice ? "success" : "error" %>">
            <a class="close" data-dismiss="alert">&#215;</a>
            <%= content_tag :div, value, :id => "flash_#{key}" if value.is_a?(String) %>
          </div> <!-- /flash -->
        <% end %>
        <%= yield %>
      </div> <!-- /content container -->
    </div>
  </body>
  <footer>
    <a href="//github.com/seocahill">&copy; Seo Cahill 2012</a>
  </footer>
</html>
