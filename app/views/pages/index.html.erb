<div class="landing-image">
  <div class="big-logo">
    <% unless current_user %>
      <h2>100 Motels | <small><%= link_to "sign-in", login_path %> &middot; <%= link_to "events", events_path %> </small></h2>
    <% end %>
  </div>
    <div class="headline container small-container pagination-centered">
          <h2>
            <span class="black-back">Tour the World without a record label.</span>
          </h2> <br>
        <div class="row-fluid">
          <div class="span3 offset1"><%= new_or_view_event %></div>
          <div class="span6 search"><%= render 'search' %></div>
        </div>
    </div>
  </div>
  <!-- <hr class="fancy-hr"> -->
</div>

<div class="landing-info">
  <div class="row-fluid">
    <div class="span6 well">
      <h3 class=""><i class="icon-magic"></i> Features</h3>
      <hr>
      <p class="lead">A Funding & Ticketing platform designed to be flexible and reusable. No funding time-limits, take as long as you need.</p>
      <%= link_to "More", info_path, class: "btn btn-large" %>
    </div>
    <div class="span6 well">
      <h3 class=""><i class="icon-money"></i> Fees</h3>
      <hr>
      <p class="lead">Total 3.9% + 30c per transaction added-on (you keep the full ticket price), full refunds including fees.</p>
      <%= link_to "More", info_path, class: "btn btn-large" %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6 well">
      <h3 class=""><i class="icon-beaker"></i> Beta</h3>
      <hr>
      <p class="lead">Some restrictions for beta. To receive money you must have a US or Canadian bank account (UK and Euro soon).</p>
      <%= link_to "More", info_path, class: "btn btn-large" %>
    </div>
    <div class="span6 well">
      <h3 class=""><i class="icon-music"></i> For Artists</h3>
      <hr>
      <p class="lead">Built by independent Artists for the love of good music & late nights in distant towns & cities.</p>
      <%= link_to "More", info_path, class: "btn btn-large" %>
    </div>
  </div>
  <!-- <hr> -->
  <div class="row-fluid"><div class="try-it-now pagination-centered span12"><p class="lead">Read more about <%= link_to "how it works", info_path %> or</p> <%= new_or_view_event %></div>
  </div>

</div>

