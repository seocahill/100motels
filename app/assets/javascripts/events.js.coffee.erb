$ ->
  $('.btn-num').click (e) ->
    e.preventDefault();
    currentValue = $('.input-keypad').val();
    newDigit = $(this).text();
    $('.input-keypad').val(currentValue + newDigit);

  $('.btn-clear').click (e) ->
    e.preventDefault();
    $('.input-keypad').val("");

  $('.btn.submit').click (e) ->
    e.preventDefault();
    $(this).closest("form").submit();

