# Order Total method
@orderTotal = () ->
  quantity = $('#order_quantity').val()
  price = $('.price').data('price')
  net_price = quantity * price
  gross = (net_price / .961) + 0.30
  order_price = if price > 0 then gross else 0.0
  $('.order-total').html(order_price.toFixed(2))

