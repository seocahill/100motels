db:
  image: postgres:9.4.1
  ports:
    - "5432:5432"

redis:
    build: ./docker/redis
    ports:
        - "6379:6379"

sidekiq:
  build: .
  command: bundle exec sidekiq
  links:
    - db
    - redis

web:
  build: .
  command: bundle exec rails server --port 3000 --binding 0.0.0.0
  ports:
    - "3000:3000"
  links:
    - db
    - redis
  volumes:
    - .:/one_hundred_motels
