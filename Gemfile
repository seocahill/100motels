source 'https://rubygems.org'

gem 'rails', '3.2.7'

group :production do
	gem 'pg'
end

group :developement, :test do
	gem 'rspec-rails'
	gem 'guard-rspec'
end

group :test do
	gem 'capybara'
	gem 'rb-inotify'
	gem 'libnotify'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
